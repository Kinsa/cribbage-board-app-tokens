{
  "name": "@kinsa/cribbage-board-app-tokens",
  "version": "1.0.0",
  "description": "Design tokens for Cribbage Board App",
  "main": "build/js/variables.js",
  "type": "module",
  "files": [
    "build",
    "properties"
  ],
  "scripts": {
    "build": "node_modules/.bin/style-dictionary build --config ./config.js",
    "clean": "rm -rf build",
    "prepublishOnly": "npm run build",
    "test": "npx mocha",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "exports": {
    ".": {
      "import": "./build/es/variables.mjs"
    },
    "./build/es/variables": {
      "import": "./build/es/variables.mjs"
    },
    "./build/js/variables": {
      "import": "./build/js/variables.js"
    },
    "./build/tailwind/preset": "./build/tailwind/preset.js",
    "./build/tailwind/preset.js": "./build/tailwind/preset.js"
  },
  "author": "Kinsa Creative Incorporated",
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "chai": "^6.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "prettier": "3.7.4",
    "style-dictionary": "^5.1.1",
    "tailwindcss": "^3.4.18"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
