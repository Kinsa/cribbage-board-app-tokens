{
    "source": [
        "tokens/**/*.json"
    ],
    "platforms": {
        "css": {
            "transformGroup": "css",
            "buildPath": "build/css/",
            "files": [
                {
                    "destination": "_variables.css",
                    "format": "css/variables"
                }
            ]
        },
        "javaScript": {
            "transformGroup": "js",
            "buildPath": "build/js/",
            "files": [
                {
                    "destination": "variables.js",
                    "format": "javascript/es6"
                }
            ]
        },
        "tailwind": {
            "transformGroup": "js",
            "buildPath": "build/tailwind/",
            "files": [
                {
                    "destination": "variables.js",
                    "format": "javascript/es6"
                }
            ]
        }
    }
}